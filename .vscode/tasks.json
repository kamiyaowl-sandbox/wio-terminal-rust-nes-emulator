{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "rustfmt",
            "command": "cargo",
            "options": {
                "cwd": "${fileDirname}/../"
            },
            "args": [
                "fmt",
            ],
            "problemMatcher": [
                "$rustc"
            ],
        },
        {
            "type": "shell",
            "label": "test",
            "command": "cargo",
            "options": {
                "cwd": "${workspaceFolder}/test"
            },
            "args": [
                "test",
            ],
            "problemMatcher": [
                "$rustc"
            ],
        },
        {
            "type": "shell",
            "label": "test release",
            "command": "cargo",
            "options": {
                "cwd": "${workspaceFolder}/test"
            },
            "args": [
                "test",
                "--release"
            ],
            "problemMatcher": [
                "$rustc"
            ],
        },
        {
            "type": "shell",
            "label": "test ignored",
            "command": "cargo",
            "options": {
                "cwd": "${workspaceFolder}/test"
            },
            "args": [
                "test",
                "--",
                "--ignored",
            ],
            "problemMatcher": [
                "$rustc"
            ],
        },
        {
            "type": "shell",
            "label": "test release ignored",
            "command": "cargo",
            "options": {
                "cwd": "${workspaceFolder}/test"
            },
            "args": [
                "test",
                "--release",
                "--",
                "--ignored",
            ],
            "problemMatcher": [
                "$rustc"
            ],
        },
        {
            "type": "shell",
            "label": "run desktop",
            "command": "cargo",
            "options": {
                "cwd": "${workspaceFolder}/desktop"
            },
            "args": [
                "run",
            ],
            "problemMatcher": [
                "$rustc"
            ],
        },
        {
            "type": "shell",
            "label": "run desktop release",
            "command": "cargo",
            "options": {
                "cwd": "${workspaceFolder}/desktop"
            },
            "args": [
                "run",
                "--release",
            ],
            "problemMatcher": [
                "$rustc"
            ],
        },
        {
            "type": "shell",
            "label": "build desktop",
            "command": "cargo",
            "options": {
                "cwd": "${workspaceFolder}/desktop"
            },
            "args": [
                "build",
            ],
            "problemMatcher": [
                "$rustc"
            ],
        },
        {
            "type": "shell",
            "label": "build desktop release",
            "command": "cargo",
            "options": {
                "cwd": "${workspaceFolder}/desktop"
            },
            "args": [
                "build",
                "--release"
            ],
            "problemMatcher": [
                "$rustc"
            ],
        },
    ]
}