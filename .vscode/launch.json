    "version": "0.2.0",
    "configurations": [

        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rust-nes-emulator'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rust-nes-emulator",
                    "--package=rust-nes-emulator"
                ],
                "filter": {
                    "name": "rust-nes-emulator",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "cargo build"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'rust-nes-emulator'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=rust-nes-emulator",
                    "--package=rust-nes-emulator"
                ],
                "filter": {
                    "name": "rust-nes-emulator",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}